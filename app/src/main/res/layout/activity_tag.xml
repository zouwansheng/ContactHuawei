<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:id="@+id/cancel_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="取消"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_centerInParent="true"
            android:text="标签"/>
        <TextView
            android:id="@+id/save_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:text="保存"/>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:text="类型"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"/>
    <RadioGroup
        android:id="@+id/custom_type"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp">
        <RadioButton
            android:id="@+id/custom_radio"
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:button="@null"
            android:text="客户"
            android:gravity="center"
            android:background="@drawable/radio_button_bac"/>
        <RadioButton
            android:id="@+id/suplier_radio"
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:button="@null"
            android:text="供应商"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:background="@drawable/radio_button_bac"/>
    </RadioGroup>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:text="等级"
        android:textSize="16sp"
        android:textColor="@color/black"/>
    <RadioGroup
        android:id="@+id/level_type"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp">
        <RadioButton
            android:id="@+id/first_radio"
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:button="@null"
            android:text="1st"
            android:gravity="center"
            android:background="@drawable/radio_button_bac"/>
        <RadioButton
            android:id="@+id/second_radio"
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:button="@null"
            android:text="2nd"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:background="@drawable/radio_button_bac"/>
        <RadioButton
            android:id="@+id/third_radio"
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:button="@null"
            android:text="3rd"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:background="@drawable/radio_button_bac"/>
    </RadioGroup>
    <RatingBar
        android:id="@+id/rating_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="45dp"/>
</LinearLayout>