<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:background="@color/white">
        <TextView
            android:id="@+id/cancel_text"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="取消"
            android:gravity="center"
            android:textColor="@color/color_70c8ea"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:text="编辑客户"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:gravity="center"/>
        <TextView
            android:id="@+id/save_text"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="保存"
            android:gravity="center"
            android:textColor="@color/color_70c8ea"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/sbc_header_text"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="11"
        android:layout_marginTop="15dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="公司信息"
                android:layout_marginLeft="15dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="公司"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_gravity="center" />
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/voltage_low_icon"
                    android:layout_gravity="center"/>
                <Button
                    android:id="@+id/btn_query"
                    android:layout_width="70dp"
                    android:layout_height="25dp"
                    android:layout_toRightOf="@+id/tv_product"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/button_bac"
                    android:layout_gravity="center_vertical"
                    android:text="查询"
                    android:textColor="@color/white"/>
                <EditText
                    android:id="@+id/product_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:maxLines="3"
                    android:ellipsize="end"
                    android:textSize="12sp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/sbc_list_item"
                android:layout_marginLeft="15dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="国家"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_gravity="center" />
                <TextView
                    android:id="@+id/country_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:drawableRight="@drawable/item_icon_right_arrow_press"
                    android:drawablePadding="10dp"
                    android:text="请选择"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/sbc_list_item"
                android:layout_marginLeft="15dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="来源"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_gravity="center" />
                <TextView
                    android:id="@+id/from_where"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:drawableRight="@drawable/item_icon_right_arrow_press"
                    android:drawablePadding="10dp"
                    android:text="请选择"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/sbc_list_item"
                android:layout_marginLeft="15dp"/>
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="渠道"
                android:layout_marginLeft="15dp"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_gravity="center" />
            <TextView
                android:id="@+id/channel_from"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:drawableRight="@drawable/item_icon_right_arrow_press"
                android:drawablePadding="10dp"
                android:text="请选择"/>
        </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/sbc_list_item"
                android:layout_marginLeft="15dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="销售团队"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_gravity="center" />
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/voltage_low_icon"
                    android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/sale_team"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:drawableRight="@drawable/item_icon_right_arrow_press"
                    android:drawablePadding="10dp"
                    android:text="请选择销售团队"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/sbc_list_item"
                android:layout_marginLeft="15dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="销售员"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_gravity="center" />
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/voltage_low_icon"
                    android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/sale_worker"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:drawableRight="@drawable/item_icon_right_arrow_press"
                    android:drawablePadding="10dp"
                    android:text="请选择"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/sbc_list_item"
                android:layout_marginLeft="15dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <TextView
                    android:id="@+id/tv_biaoqian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="标签"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_marginTop="5dp"/>
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/voltage_low_icon"
                    android:layout_gravity="center"
                    android:layout_toRightOf="@+id/tv_biaoqian"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_biaoqian"
                    android:text="标签能够对客户进行分类和管理,也可用于筛选"
                    android:layout_alignBottom="@+id/tv_biaoqian"
                    android:textSize="12sp"
                    android:layout_marginLeft="15dp"/>
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:background="@drawable/customer_text"
                    android:text="客户"
                    android:layout_below="@+id/tv_biaoqian"
                    android:gravity="center"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/item_icon_right_arrow_press"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/sbc_list_item"
                android:layout_marginLeft="15dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="感兴趣的产品"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_gravity="center" />
                <TextView
                    android:id="@+id/like_product"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:drawableRight="@drawable/item_icon_right_arrow_press"
                    android:drawablePadding="10dp"
                    android:text="请选择"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="联系人@地址"
                android:layout_marginLeft="15dp"
                android:gravity="bottom"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联系人@地址"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_gravity="center" />
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/voltage_low_icon"
                    android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/link_address"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:drawableRight="@drawable/item_icon_right_arrow_press"
                    android:drawablePadding="10dp"
                    android:text="2"/>
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/delete_this"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/height_yellow"
        android:text="删除客户"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:textStyle="bold"/>
</LinearLayout>